# ðŸš€ Production Environment Configuration for Mobile App

# ==========================================
# API CONFIGURATION
# ==========================================

# Your Render.com API endpoint
VITE_API_BASE_URL=https://univeral-liquors-webapp-test.onrender.com/api
VITE_API_TIMEOUT=15000

# App Information  
VITE_APP_NAME=Universal Liquors
VITE_APP_VERSION=1.0.0
VITE_MIN_AGE_REQUIREMENT=21

# ==========================================
# MOBILE SPECIFIC SETTINGS
# ==========================================

# Enable mobile-specific features
VITE_IS_MOBILE_APP=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true

# ==========================================
# SECURITY SETTINGS
# ==========================================

# SSL and Security
VITE_ENFORCE_HTTPS=true
VITE_ENABLE_SSL_PINNING=true

# Age Verification
VITE_STRICT_AGE_VERIFICATION=true
VITE_REQUIRE_ID_VERIFICATION=true

# ==========================================
# RENDER.COM SPECIFIC SETTINGS
# ==========================================

# Handle Render.com cold starts
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=2000
VITE_ENABLE_API_WARMUP=true

# ==========================================
# DEBUGGING (PRODUCTION)
# ==========================================

# Production debugging
VITE_DEBUG_MODE=false
VITE_ENABLE_LOGS=false
VITE_LOG_LEVEL=error
